# MPI2 Specifics

export MPI2=/opt/mpich2
export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}"":$MPI2/lib:/usr/local/lib64"
export MPI2INC=$MPI2/include
export MPI2EXEC=$MPI2/bin
export PATH=/opt/mpich2/bin:$PATH

# End of MPI2 ENV setting

